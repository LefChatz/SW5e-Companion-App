<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/button_customs_constlout"
    android:layout_width="match_parent"
    android:layout_height="100sp"
    android:foreground="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/customization_option"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:fontFamily="@font/starjedi"
        android:letterSpacing="0.1"
        android:textAlignment="gravity"
        android:textColor="@color/gold"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/customizations_button_sourcebook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="name" />

    <TextView
        android:id="@+id/customization_option_preq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/gold"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/customization_option"
        app:layout_constraintTop_toBottomOf="@id/customization_option" />

    <TextView
        android:id="@+id/customizations_button_sourcebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:textAlignment="viewEnd"
        android:textColor="@color/gold"
        android:textSize="25sp"
        android:fontFamily="@font/starjedi"
        app:layout_constraintBottom_toBottomOf="@+id/customization_option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/customization_option"
        tools:text="SRC" />

</androidx.constraintlayout.widget.ConstraintLayout>