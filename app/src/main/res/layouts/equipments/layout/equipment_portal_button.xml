<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/class_button_relout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:rotationY="180"
        app:layout_constraintBottom_toBottomOf="@+id/class_button_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/class_button_textview"
        app:layout_constraintTop_toBottomOf="@+id/class_button_image"
        app:srcCompat="@drawable/lightsabergoldminimal" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/class_button_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/class_button_image"
        app:srcCompat="@drawable/lightsabergoldminimal" />

    <ImageView
        android:id="@+id/class_button_image"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="@drawable/equipmentalltasa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/class_button_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/starjedi"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textColor="@color/gold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/class_button_image"
        app:layout_constraintStart_toStartOf="@+id/class_button_image"
        app:layout_constraintTop_toBottomOf="@+id/class_button_image"
        tools:text="@string/armor" />

</androidx.constraintlayout.widget.ConstraintLayout>