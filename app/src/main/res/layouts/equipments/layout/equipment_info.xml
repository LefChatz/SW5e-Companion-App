<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".equipment.EquipmentInfo"
    android:background="@drawable/neutralbg"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:translationZ="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@drawable/fade_black_appbar_background"
        android:theme="@style/Theme.Swtrial2.AppBarOverlay"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.amachewrs.sw5ecompanionapp.widget.BackButton
            android:id="@+id/BackButton"
            android:layout_width="70sp"
            android:layout_height="0sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/starjedi"
            android:text="@string/equipment"
            android:textColor="@color/gold"
            android:textSize="25sp"
            android:translationZ="90dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dummybutton"
            android:layout_width="110dp"
            android:layout_height="0dp"
            android:paddingEnd="26dp"
            android:paddingStart="0dp"
            android:background="?android:attr/selectableItemBackground"
            android:textAllCaps="false"
            android:text="@string/wealth_menu"
            android:textColor="@color/gold"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrolly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingVertical="50dp">

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="5dp"
        android:contentDescription="@string/fab"
        app:backgroundTint="#80FF0000"
        app:srcCompat="@drawable/menuopengold"
        android:visibility="gone"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>