<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrolly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="50dp"
    android:background="@drawable/neutralbg">
    <LinearLayout
        android:id="@+id/llArmorsAndShields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:text="@string/equipment_menu_armors_and_shields"
            android:textAppearance="@style/GoldTextStarjedi"
            android:textSize="26sp"
            android:paddingBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:text="@string/equipment_info_armors_and_shields1"
            android:textAppearance="@style/GoldText" />

        <com.amachewrs.sw5ecompanionapp.widget.UniversalTitleGoldbarTextTextview
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:title="armor and shield proficiency"
            app:text="@string/equipment_info_armors_and_shields2"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:background="@drawable/goldbox"
            android:text="@string/equipment_info_armors_and_shields3"
            android:textAppearance="@style/GoldText" />

        <com.amachewrs.sw5ecompanionapp.widget.UniversalTitleGoldbarTextTextview
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:title="Armor class (Ac)"
            app:text="@string/equipment_info_armors_and_shields4" />

        <com.amachewrs.sw5ecompanionapp.widget.UniversalTitleGoldbarTextTextview
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:title="Armor Properties"
            app:text="@string/equipment_info_armors_and_shields5"
            app:makeStarjedi="true" />

        <com.amachewrs.sw5ecompanionapp.widget.UniversalTitleGoldbarTextTextview
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:title="Light Armor"
            app:text="@string/equipment_info_armors_and_shields6"
            app:makeStarjedi="true" />

        <com.amachewrs.sw5ecompanionapp.widget.UniversalTitleGoldbarTextTextview
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:title="Medium Armor"
            app:text="@string/equipment_info_armors_and_shields7"
            app:makeStarjedi="true" />

        <com.amachewrs.sw5ecompanionapp.widget.UniversalTitleGoldbarTextTextview
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:makeStarjedi="true"
            app:text="@string/equipment_info_armors_and_shields8"
            app:title="Heavy Armor" />

        <com.amachewrs.sw5ecompanionapp.widget.UniversalTitleGoldbarTextTextview
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:title="Shields"
            app:text="@string/equipment_info_armors_and_shields9"
            app:makeStarjedi="true" />

        <com.amachewrs.sw5ecompanionapp.widget.UniversalTitleGoldbarTextTextview
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:text="@string/equipment_info_armors_and_shields10"
            app:title="getting into and out of armor" />

        <com.amachewrs.sw5ecompanionapp.widget.UniversalTitleGoldbarTextTextview
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            app:text=""
            app:title="donning and doffing armor" />

        <TableLayout
            android:id="@+id/armortable1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:paddingStart="5dp"
            android:layout_gravity="center">

            <TableRow android:id="@+id/tableRow">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textAlignment="textStart"
                    android:textColor="@color/gold"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_editor_absoluteY="5272dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_conversion_absoluteWidth="180dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don"
                    android:textAlignment="center"
                    android:textColor="@color/gold"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_editor_absoluteY="5272dp"
                    tools:layout_editor_absoluteX="258dp"
                    tools:layout_conversion_absoluteWidth="32dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doff"
                    android:textAlignment="center"
                    android:textColor="@color/gold"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_editor_absoluteY="5272dp"
                    tools:layout_editor_absoluteX="454dp"
                    tools:layout_conversion_absoluteWidth="35dp" />

            </TableRow>

            <TableRow android:background="#50FFD700">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Light armor"
                    android:textAlignment="textStart"
                    android:textColor="@color/gold"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 minute"
                    android:textAlignment="center"
                    android:textColor="@color/gold"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 minute"
                    android:textAlignment="center"
                    android:textColor="@color/gold"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow android:background="#80FFD700">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium Armor"
                    android:textAlignment="textStart"
                    android:textColor="@color/gold"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 minute"
                    android:textAlignment="center"
                    android:textColor="@color/gold"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 minute"
                    android:textAlignment="center"
                    android:textColor="@color/gold"
                    android:textSize="17sp" />

            </TableRow>

            <TableRow android:background="#50FFD700">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heavy armor"
                    android:textAlignment="textStart"
                    android:textColor="@color/gold"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 minutes"
                    android:textAlignment="center"
                    android:textColor="@color/gold"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 minute"
                    android:textAlignment="center"
                    android:textColor="@color/gold"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow android:background="#80FFD700">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Light shield"
                    android:textAlignment="textStart"
                    android:textColor="@color/gold"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 reaction"
                    android:textAlignment="center"
                    android:textColor="@color/gold"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 reaction"
                    android:textAlignment="center"
                    android:textColor="@color/gold"
                    android:textSize="17sp" />

            </TableRow>

            <TableRow android:background="#50FFD700">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium shield"
                    android:textAlignment="textStart"
                    android:textColor="@color/gold"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 bonus action"
                    android:textAlignment="center"
                    android:textColor="@color/gold"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 bonus action"
                    android:textAlignment="center"
                    android:textColor="@color/gold"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow android:background="#80FFD700">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heavy shield"
                    android:textAlignment="textStart"
                    android:textColor="@color/gold"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 action"
                    android:textAlignment="center"
                    android:textColor="@color/gold"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 action"
                    android:textAlignment="center"
                    android:textColor="@color/gold"
                    android:textSize="17sp" />

            </TableRow>
        </TableLayout>


    </LinearLayout>
</ScrollView>