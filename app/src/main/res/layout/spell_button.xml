<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70sp"
    android:foreground="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/table_spelltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/starjedi"
        android:letterSpacing="0.1"
        android:textAlignment="viewStart"
        android:textColor="@color/gold"
        tools:text="name\nstuff" />
    <TextView
        android:id="@+id/table_spelltext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/table_spelltext"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20sp"
        android:textAlignment="viewEnd"
        android:textColor="@color/gold"
        tools:text="Casting Time" />

    <ImageButton
        android:id="@+id/spell_fav"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_above="@+id/table_spelltext2"
        android:layout_alignEnd="@+id/table_spelltext2"
        android:background="@drawable/favouritegold" />
</RelativeLayout>