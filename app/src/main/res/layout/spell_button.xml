<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/table_spell_constlout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70sp"
    android:foreground="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/table_spell_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="24sp"
        android:fontFamily="@font/starjedi"
        android:letterSpacing="0.1"
        android:textAlignment="gravity"
        android:textColor="@color/gold"
        app:layout_constraintBottom_toBottomOf="@+id/table_spell_fav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="name" />
    <TextView
        android:id="@+id/table_spell_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/table_spell_name"
        app:layout_constraintTop_toBottomOf="@id/table_spell_name"
        android:text="@string/details"
        android:textColor="@color/gold"
        />

    <TextView
        android:id="@+id/table_spell_casting_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"
        android:textColor="@color/gold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/table_spell_name"
        tools:text="Casting Time" />

    <ImageButton
        android:id="@+id/table_spell_fav"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/favouritegold"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/favorite_button" />
</androidx.constraintlayout.widget.ConstraintLayout>