<?xml version="1.0" encoding="utf-8"?>
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/reclview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ForceCastingActivity"
    tools:showIn="@layout/activity_forcecasting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:scrollbars="vertical"
    android:scrollbarStyle="insideOverlay"
    app:fastScrollEnabled="true"
    app:fastScrollVerticalThumbDrawable="@drawable/forcecasting_scrollbar"
    app:fastScrollVerticalTrackDrawable="@drawable/forcecasting_scrollbartrack_selector"
    app:fastScrollHorizontalThumbDrawable="@drawable/forcecasting_scrollbar"
    app:fastScrollHorizontalTrackDrawable="@drawable/forcecasting_scrollbartrack_selector"
    >
</androidx.recyclerview.widget.RecyclerView>