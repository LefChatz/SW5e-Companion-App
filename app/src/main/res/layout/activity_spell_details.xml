<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/SpellDetailsCoord"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".spells.adapterstuff.SpellDetailsActivity"
    android:background="@drawable/neutralbg2">
	<androidx.constraintlayout.widget.ConstraintLayout
		android:translationZ="2dp"
		android:background="#95000000"
		android:theme="@style/Theme.Swtrial2.AppBarOverlay"
		app:layout_insetEdge="top"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<androidx.appcompat.widget.Toolbar
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/force_toolbar"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			/>
		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/button2"
			android:layout_width="70sp"
			android:layout_height="0dp"
			android:background="#35D4af37"
			android:onClick="returntomain"
			android:text="@string/back"
			android:textColor="@color/gold"
			android:textSize="15sp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:fontFamily="@font/starjedi"
			android:text="@string/forcecasting"
			android:textColor="@color/gold"
			android:textSize="20sp"
			android:translationZ="90dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent" />
	</androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:id="@+id/SpellScrolly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		app:layout_dodgeInsetEdges="top"
		android:paddingBottom="40dp"
        >
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<TextView
				android:id="@+id/SpellDetailsTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_dodgeInsetEdges="top"
				android:fontFamily="@font/starjedi"
				android:textSize="25sp"
				android:text="@string/spell_name"
				android:textAlignment="center"
				android:textColor="@color/gold"
				android:layout_gravity="center|top"/>
			<TextView
				android:id="@+id/SpellDetailsText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/text"
				android:textColor="@color/gold"
				android:textSize="20sp"
				android:paddingBottom="100dp"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />
		</LinearLayout>
	</ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
