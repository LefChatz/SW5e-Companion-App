<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".equipment.equipmentadapterstuff.EquipmentDetailsActivity"
    android:background="@drawable/neutralbg2">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="#99000000"
        android:theme="@style/Theme.Swtrial2.AppBarOverlay"
        app:layout_insetEdge="top"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button2"
                android:layout_width="70dp"
                android:layout_height="0sp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:onClick="returntomain"
                android:text="@string/back"
                android:textColor="@color/gold"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:gravity="center"
                android:id="@+id/EquipmentDetailsTitle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/starjedi"
                android:text="@string/title"
                android:textAlignment="gravity"
                android:textColor="@color/gold"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="16sp"
                android:autoSizeMaxTextSize="25sp"
                android:autoSizeStepGranularity="2sp"
                android:translationZ="90dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toEndOf="@+id/button2"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="329dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:id="@+id/EquipmentScrolly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_dodgeInsetEdges="top"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/EquipmentDetailsAttributes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attributes"
                android:textColor="@color/gold"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/EquipmentDetailsCostWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cost &amp; Weight"
                android:textColor="@color/gold"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/EquipmentDetailsAttributes"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/EquipmentDetailsDamageAC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DamageAC"
                app:layout_constraintBottom_toBottomOf="@+id/EquipmentDetailsCostWeight"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/gold"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/goldline"
                android:layout_width="0dp"
                android:layout_height="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/EquipmentDetailsCostWeight"
                app:srcCompat="@drawable/goldhorizontalline" />

            <TextView
                android:id="@+id/EquipmentDetailsProperties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Properties"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/goldline"
                android:textColor="@color/gold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/EquipmentDetailsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text"
                android:layout_marginTop="20dp"
                android:textColor="@color/gold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/EquipmentDetailsImage"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/EquipmentDetailsExpansion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expansion"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/gold"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/EquipmentDetailsImage"
                android:layout_width="240dp"
                android:layout_height="317dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/EquipmentDetailsProperties"
                app:srcCompat="@drawable/error404" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>