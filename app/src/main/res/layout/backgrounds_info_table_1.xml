<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#55FFD700"
    android:stretchColumns="2"
    android:shrinkColumns="1"
    android:padding="3dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Human"
        android:textColor="@color/gold"
        android:textSize="24sp"
        android:fontFamily="@font/starjedi"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:src="@drawable/goldhorizontalline"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="physical characteristics"
        android:textColor="@color/gold"
        android:textSize="18sp"
        android:fontFamily="@font/starjedi"
        />
    <TableRow
        android:background="#50D4AF37">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height:"
            android:textColor="@color/gold"
            android:textSize="20sp"
            android:paddingEnd="80dp"
            android:textStyle="italic"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/four_foot_eigth"
            android:textColor="@color/gold"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:paddingEnd="30dp"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plus2d10inches"
            android:textColor="@color/gold"
            android:textSize="20sp"
            android:textAlignment="center"
            />

    </TableRow>
    <TableRow
        android:paddingBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weigth:"
            android:textColor="@color/gold"
            android:textSize="20sp"
            android:paddingEnd="10dp"
            android:textStyle="italic"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="110lb/50kg"
            android:textColor="@color/gold"
            android:textSize="20sp"
            android:paddingStart="10dp"
            android:paddingEnd="30dp"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x(2d4)lb"
            android:textColor="@color/gold"
            android:textSize="20sp"
            android:textAlignment="center"
            />
    </TableRow>
</TableLayout>
