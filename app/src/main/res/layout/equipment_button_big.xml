<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100sp"
    android:foreground="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/table_equipmenttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/starjedi"
        android:letterSpacing="0.1"
        android:textAlignment="viewStart"
        android:textColor="@color/gold"
        tools:text="name stuff \nalso name stuff" />

    <TextView
        android:id="@+id/table_equipmenttext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table_equipmenttext"
        android:layout_marginStart="5dp"
        android:textColor="@color/gold"
        tools:text="Details" />

    <ImageButton
        android:id="@+id/equipment_fav"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:foreground="@drawable/favouritegold"
        android:background="#00000000" />
</RelativeLayout>