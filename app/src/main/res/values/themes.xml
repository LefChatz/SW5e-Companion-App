<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Swtrial2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryDark">@color/gold</item>
        <item name="colorAccent">@color/gold</item>
        <item name="android:colorPrimaryDark">@color/gold</item>
        <item name="android:colorPrimary">@color/gold</item>
        <item name="actionModeSplitBackground">@color/gold</item>
        <item name="android:textAppearance">@style/GoldText</item>
    </style>

    <style name="Theme.Swtrial2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Swtrial2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" >
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryDark">@color/gold</item>
        <item name="colorAccent">@color/gold</item>
        <item name="android:colorPrimaryDark">@color/gold</item>
        <item name="android:colorPrimary">@color/gold</item>
        <item name="actionModeSplitBackground">@color/gold</item>
        <item name="android:textAppearance">@style/GoldText</item>
    </style>
    <style name="ForcecastingTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryDark">@color/gold</item>
        <item name="colorAccent">@color/gold</item>
        <item name="android:colorPrimaryDark">@color/gold</item>
        <item name="android:colorPrimary">@color/gold</item>
        <item name="actionModeSplitBackground">@color/gold</item>
        <item name="android:textAppearance">@style/GoldText</item>
    </style>
    <style name="GoldText">
        <item name="android:textColor">@color/gold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="GoldTextStarjedi">
        <item name="android:fontFamily">@font/starjedi</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Theme.Swtrial2.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources>